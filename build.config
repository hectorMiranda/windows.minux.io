# Minux RTOS Control Center - Build Configuration

## Project Configuration
PROJECT_NAME = "Minux RTOS Control Center"
VERSION = "2.1.0"
BUILD_DATE = auto

## Compiler Settings
COMPILER = "g++"
CXX_STANDARD = "c++17"
OPTIMIZATION = "-O2"

## Windows SDK Settings
TARGET_WINDOWS_VERSION = "0x0A00"  # Windows 10+
SUBSYSTEM = "WINDOWS"

## Required Libraries
LIBRARIES = [
    "user32.lib",
    "gdi32.lib", 
    "kernel32.lib",
    "dwmapi.lib",
    "comctl32.lib",
    "uxtheme.lib",
    "shell32.lib",
    "psapi.lib",
    "pdh.lib",
    "iphlpapi.lib",
    "advapi32.lib"
]

## Preprocessor Definitions
DEFINES = [
    "UNICODE",
    "_UNICODE", 
    "WINVER=0x0A00",
    "_WIN32_WINNT=0x0A00",
    "WIN32_LEAN_AND_MEAN",
    "NOMINMAX",
    "MINUX_VERSION=\"2.1.0\"",
    "MINUX_BUILD_MODERN_UI"
]

## Compiler Flags
CXXFLAGS = [
    "/std:c++17",
    "/EHsc",
    "/W3",
    "/MT",           # Static runtime
    "/Zi",           # Debug info
    "/GS",           # Security checks
    "/Gy",           # Function-level linking
    "/Gm-",          # Disable minimal rebuild
    "/fp:precise"    # Precise floating point
]

## Linker Flags  
LDFLAGS = [
    "/SUBSYSTEM:WINDOWS",
    "/MACHINE:X64",
    "/MANIFESTUAC:level='asInvoker'",
    "/DYNAMICBASE",
    "/NXCOMPAT",
    "/LARGEADDRESSAWARE"
]

## Source Files
SOURCES = [
    "main.cpp",
    "minux_system.cpp"
]

## Header Files
HEADERS = [
    "minux_ui.h"
]

## Resource Files
RESOURCES = [
    "rtos/rtos.rc"
]

## Output Configuration
OUTPUT_DIR = "build"
EXECUTABLE_NAME = "MinuxRTOS.exe"
DEBUG_SYMBOLS = true

## Feature Flags
FEATURES = {
    "TOUCH_SUPPORT": true,
    "DWM_COMPOSITION": true,
    "SYSTEM_TRAY": true,
    "PERFORMANCE_MONITORING": true,
    "NETWORK_MONITORING": true,
    "PROCESS_MONITORING": true,
    "REAL_TIME_UPDATES": true,
    "TRANSPARENCY_EFFECTS": true,
    "MODERN_ANIMATIONS": true,
    "GESTURE_SUPPORT": true
}

## Performance Settings
PERFORMANCE = {
    "UPDATE_INTERVAL_MS": 1000,
    "FAST_UPDATE_INTERVAL_MS": 100,
    "ANIMATION_DURATION_MS": 250,
    "TOUCH_SAMPLE_RATE": 120
}

## Build Commands
# Visual Studio
BUILD_VS = "msbuild windows.minux.io.sln /p:Configuration=Release /p:Platform=x64"

# MinGW
BUILD_MINGW = "g++ -std=c++17 -O2 -mwindows -static-libgcc -static-libstdc++ main.cpp minux_system.cpp -o MinuxRTOS.exe -luser32 -lgdi32 -ldwmapi -lcomctl32 -luxtheme -lshell32 -lpsapi -lpdh -liphlpapi -ladvapi32"

# Clang
BUILD_CLANG = "clang++ -std=c++17 -O2 -target x86_64-pc-windows-msvc main.cpp minux_system.cpp -o MinuxRTOS.exe -luser32 -lgdi32 -ldwmapi -lcomctl32 -luxtheme -lshell32 -lpsapi -lpdh -liphlpapi -ladvapi32"
